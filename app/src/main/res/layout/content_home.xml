<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home"
    tools:context=".HomeActivity"
    android:background="#424242"
    android:scrollIndicators="bottom|top">

    <TextView android:text="JamBlast Chapster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="25dp"
        android:singleLine="true"
        android:textColor="#cfd8dc"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView2"
        android:scrollIndicators="bottom|top">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/cp1"
                android:layout_width="186dp"
                android:layout_height="187dp"
                android:id="@+id/imageView3"
                android:onClick="Chapter_one"/>

            <ImageView
                android:src="@drawable/cpp1"
                android:layout_width="181dp"
                android:layout_height="181dp"
                android:id="@+id/imageView4"
                android:layout_marginTop="10dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter 1"
                android:id="@+id/textView3"
                android:textSize="20dp"
                android:textColor="#111111" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter 2"
                android:id="@+id/textView4"
                android:textSize="20dp"
                android:textColor="#111111"
                android:layout_column="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/d1"
                android:layout_width="186dp"
                android:layout_height="187dp"
                android:id="@+id/imageView5"
                android:layout_column="0"
                android:layout_marginTop="10dp" />

            <ImageView
                android:src="@drawable/dp1"
                android:layout_width="186dp"
                android:layout_height="187dp"
                android:id="@+id/imageView6"
                android:layout_column="1"
                android:layout_marginTop="10dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter 3"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:textColor="#111111"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter 4"
                android:id="@+id/textView6"
                android:textSize="20dp"
                android:textColor="#111111"
                android:layout_column="1" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
